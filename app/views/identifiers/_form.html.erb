<%= form_with(model: identifier, local: true) do |form| %>
  <% if identifier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(identifier.errors.count, "error") %> prohibited this identifier from being saved:</h2>

      <ul>
      <% identifier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :alias %>
    <% aliases = @aliases.map { |identifier| [identifier.name, identifier.id] } %>
    <%= form.select(:uuid, options_for_select(aliases, @alias_id), include_blank: true) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
