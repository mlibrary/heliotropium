<p id="notice"><%= notice %></p>
<div id="maincontent">
  <div class="container">
    <div class="row">
      <h1>KBART Files</h1>
    </div>
    <div class="row">
      <div class="col">Folder</div>
      <div class="col">Name</div>
      <div class="col-1">Year</div>
      <div class="col-2">Updated</div>
      <div class="col-2">Verified</div>
      <div class="col-3">&nbsp;</div>
    </div>
    <div class="row">&nbsp;</div>
    <% @kbart_files.each do |kbart_file| %>
    <div class="row">
      <div class="col"><%= kbart_file.folder %></div>
      <div class="col"><%= kbart_file.name %></div>
      <div class="col-1"><%= kbart_file.year %></div>
      <div class="col-2"><%= kbart_file.updated %></div>
      <div class="col-2"><%= kbart_file.verified %></div>
      <div class="col-3">
        <div class="row">
          <div class="col"><%= link_to 'Destroy', kbart_file, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
      </div>
    </div>
    <% end %>
    <div class="row">
      <div class="col">&nbsp<%= paginate @kbart_files %></div>
    </div>
  </div>
</div>
